@using mboard.Models;
@model IEnumerable<mboard.Models.RelationWithNode<User, FriendRelation>>

@{
    ViewBag.Title = "Invitations";
}

<h2>View</h2>

<p>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.NodeData.Email)
            @Html.DisplayNameFor(model => model.RelationData.Created)
        </th>

        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.NodeData.Email)
            @Html.DisplayFor(modelItem => item.RelationData.Created)
        </td>
        <td>
        <td>
            @using (Html.BeginForm("RejectInv", "Friend"))
    {
        @Html.AntiForgeryToken()
        @Html.Hidden("id", item.RelationData.Id)
        <input type="submit" value="Odrzuć" />
}
        </td>
        <td>
            @using (Html.BeginForm("AcceptInv", "Friend"))
    {
        @Html.AntiForgeryToken()
        @Html.Hidden("id", item.RelationData.Id)
        <input type="submit" value="Zaakceptuj" />
}
        </td>
    </tr>
}

</table>
